pipeline {
    agent any
    stages {
        stage('build'){
            steps {
                script {
                    app = docker.build("app-python")
                }
            }
        }
        stage('test') {
            steps {
                echo 'Empty'
            }
        }
        stage('deploy') {
            steps {
                script {
                    docker.withRegistry('https://878343933049.dkr.ecr.us-east-1.amazonaws.com', 'ecr:us-east-1:amazon')
                    app.push("${env.BUILD_NUMBER}")
                    app.push("latest")
                }
            }
        }
    }
}